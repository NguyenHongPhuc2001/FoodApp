<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_Account_UserImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_Account_Image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/img_Account_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/cus_img" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textview_Account_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tên người dùng !"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview_Account_Image" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_AccountFeature"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_Cus_ManageOrder"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="100dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_Cus_ArrowIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow1_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:id="@+id/button_Cus_OrderMange"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Kiểm tra đơn hàng"
                    android:textAllCaps="false"
                    android:textSize="25dp"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_Cus_Info"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview_Cus_ManageOrder">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_button_Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow1_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:id="@+id/button_Cus_Infor"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Thông tin cá nhân"
                    android:textAllCaps="false"
                    android:textSize="25dp"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/button_User_Logout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="đăng xuất"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginTop="370dp"
            android:background="@drawable/round_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>





    <RelativeLayout
        android:id="@+id/layout_Customer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FC4D4D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/img_Customer_HomeIcon"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/home_icon" />

        <ImageView
            android:id="@+id/img_Customer_FavouriteIcon"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/img_Customer_HomeIcon"
            android:src="@drawable/favourite_icon" />

        <ImageView
            android:id="@+id/img_Customer_ShopingCartIcon"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/img_Customer_FavouriteIcon"
            android:src="@drawable/shopingcart_icon" />

        <ImageView
            android:id="@+id/img_Customer_AccountIcon"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/img_Customer_ShopingCartIcon"
            android:src="@drawable/account_circle_selected_icon" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>