<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_HomeBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FC4D4D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/img_HomeIcon"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/home_selected_icon" />

        <ImageView
            android:id="@+id/img_FavouriteIcon"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/img_HomeIcon"
            android:src="@drawable/favourite_icon" />

        <ImageView
            android:id="@+id/img_ShopingCartIcon"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/img_FavouriteIcon"
            android:src="@drawable/shopingcart_icon" />

        <ImageView
            android:id="@+id/img_AccountIcon"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/img_ShopingCartIcon"
            android:src="@drawable/account_icon" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>