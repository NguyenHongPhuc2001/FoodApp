<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hcmute.edu.vn.foody">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foody">
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SignupActivity"/>
        <activity android:name=".ViewAllActivity" />
        <activity android:name=".CustomerActivity" />
        <activity android:name=".LoginActivity"/>
        <activity android:name=".OrderActivity"/>
        <activity android:name=".FavouriteActivity"/>
        <activity android:name=".UserManageOrderActivity"
            android:parentActivityName=".CustomerActivity"/>
        <activity android:name=".UserManageInfoActivity"
            android:parentActivityName=".CustomerActivity"/>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".RestaurantActivity"/>
        <activity android:name=".RestaurantFoodActivity"/>
        <activity android:name=".AddToCart"/>
    </application>


</manifest>